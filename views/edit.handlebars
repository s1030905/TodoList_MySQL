<form action="/todo/{{todo.id}}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if todo.isDone}}checked{{/if}}>
    </div>
    <input name="name" placeholder="name" value="{{todo.name}}" type="text" class="form-control">
    <button class="btn btn-success" type="submit">Save</button>
  </div>
</form>
<a href="/">back</a>